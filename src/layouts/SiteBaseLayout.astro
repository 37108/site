---
import HeadLayout from "./HeadLayout.astro";
import ModeButton from "../components/Mode.astro";

export interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<HeadLayout title={title} description={description} image={image}>
  <header
    class="px-6 mx-auto lg:px-10 sticky top-0 z-10 bg-neutral-100 dark:bg-neutral-800"
  >
    <div class="flex items-center justify-between mx-auto max-w-5xl h-14">
      <div class="flex gap-4 text-neutral-900 dark:text-neutral-100 text-lg">
        <a
          href="/"
          class="border-transparent border-b dark:hover:border-neutral-100 pb-1"
          >Home</a
        >
        <a
          href="/articles"
          class="border-transparent border-b dark:hover:border-neutral-100 pb-1"
          >Articles</a
        >
      </div>
      <ModeButton />
    </div>
  </header>
  <slot />
  <footer class="p-6 mx-auto lg:px-10 text-neutral-900 dark:text-neutral-100">
    <div class="flex flex-col items-end mx-auto max-w-5xl">
      <small class="text-sm">©2023 37108</small>
      <small class="mt-4"
        >This website uses Google Analytics. See <a
          class="underline"
          href="https://policies.google.com/technologies/partner-sites"
          >"How Google uses information from sites or apps that use our services
          – Privacy & Terms – Google"</a
        > for more information.</small
      >
    </div>
  </footer>
</HeadLayout>
