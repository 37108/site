---
import { getCollection } from "astro:content";
import Layout from "../../layouts/SiteBaseLayout.astro";

export async function getStaticPaths() {
  const collection = await getCollection("anygram");

  return [
    {
      params: {
        path: undefined,
      },
    },
  ];
}

const { path } = Astro.params;

const anygrams = await getCollection("anygram");

const compare = new Intl.Collator("ja", { numeric: true }).compare;
anygrams.sort((a, b) => compare(a.id, b.id));
const image = Astro.url.origin + "/assets/og/default.webp";
---

<Layout title="articles" description="all articles" image={image}>
  <main class="px-6 mx-auto mt-10 max-w-3xl min-h-dvh text-text lg:px-10">
    <h1 class="text-2xl pb-2 border-b border-border">Anygrams</h1>
    <ul class="flex flex-col gap-1.5 mt-2">
      {
        anygrams.map((anygram) => (
          <li class="flex w-full">
            <a
              class="flex flex-col w-full hover:opacity-50"
              href={`/anygrams/${anygram.id}`}>
              <span>{anygram.data.title}</span>
              <span class="line-clamp-3 mt-2 ml-6 text-text-muted">
                {anygram.body?.substring(0, 500)}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
