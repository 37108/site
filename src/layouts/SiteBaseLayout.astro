---
import ModeButton from "../components/Mode.astro";
import HeadLayout from "./HeadLayout.astro";

export interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<HeadLayout title={title} description={description} image={image}>
  <div class="min-h-dvh">
    <slot />
  </div>
  <footer class="p-6 mx-auto max-w-5xl lg:px-10 text-text">
    <div class="flex justify-between w-full mt-4 items-center">
      <div
        class="flex items-center justify-between mx-auto max-w-5xl h-14 flex-1">
        <div class="flex gap-4 text-sm sm:text-sm">
          {
            [
              { title: "home", href: "/" },
              { title: "Articles", href: "/articles" },
              { title: "Anygrams", href: "/anygrams" },
              // { title: "Speaks", href: "/slides" },
              { title: "About", href: "/about" },
            ].map((item) => (
              <a
                href={item.href}
                class="border-transparent pb-1 hover:opacity-50">
                {item.title}
              </a>
            ))
          }
        </div>
        <ModeButton />
      </div>
    </div>
    <div class="flex flex-col items-end mx-auto mt-4">
      <small class="text-sm">©2025 37108</small>
      <small class="mt-2 break-words"
        >This website uses Google Analytics. See <a
          class="underline"
          href="https://policies.google.com/technologies/partner-sites"
          >"How Google uses information from sites or apps that use our services
          – Privacy & Terms – Google"</a
        > for more information.</small
      >
    </div>
  </footer>
</HeadLayout>
