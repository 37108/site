---
import GitHub from "../components/icons/GitHub.astro";
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>404 Not Found</title>
    <link rel="canonical" href={Astro.url} />
  </head>
  <body class="bg-stone-800 min-h-screen">
    <header class="px-6 mx-auto lg:px-10">
      <div class="flex items-center justify-end mx-auto max-w-5xl h-14">
        <a
          href="https://github.com/37108"
          aria-label="GitHub"
          class="hover:opacity-80"
        >
          <GitHub />
        </a>
      </div>
    </header>
    <main class="px-6 mx-auto lg:px-10 text-neutral-100 dark:text-neutral-900">
      <div class="flex justify-center mx-auto max-w-5xl">
        <div class="w-max">
          <h1 class="text-3xl/normal">404 Page Not Found</h1>
          <a href="/" class="block text-md/normal text-right hover:underline">
            Back to Home
          </a>
        </div>
      </div>
    </main>
    <style>
      html {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        font-feature-settings: "palt" 1;
      }
    </style>
  </body>
</html>
