---
import GitHub from "../components/icons/GitHub.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-800 min-h-screen">
    <header class="px-6 mx-auto max-w-5xl lg:px-10">
      <div class="flex items-center justify-end mx-auto max-w-5xl h-14">
        <a
          href="https://github.com/37108"
          aria-label="GitHub"
          class="hover:opacity-80"
        >
          <GitHub />
        </a>
      </div>
    </header>
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Noto+Sans+JP:wght@400;700&family=Raleway:wght@700&display=swap');

  html {
    font-family: "Noto Sans JP", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-feature-settings: "palt" 1;
  }
</style>
